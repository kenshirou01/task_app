<div class = main_container>
  <div class = information>
    <h2>スケジュール新規作成</h2>
  </div>

  <% if flash[:notice_green] %>
    <p class = notice_green ><%= flash[:notice_green] %></p>
  <% elsif flash[:notice_red] %>
    <p class = notice_red ><%= flash[:notice_red] %></p>
  <% end %>
  <%= render "shared/error", obj:@schedule %>

  <%= form_with model: @schedule do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :all, "終日" %></th>
      <td><%= f.check_box :all %> <br>終日の場合はチェックを入れます </td>
    </tr>

    <tr>
      <th><%= f.label :note, "スケジュールメモ" %></th>
      <td><%= f.text_area :note %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "スケジュールを新規登録する" %></li>
      <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
    </ul>
  </div>

  <% end %>
</div>