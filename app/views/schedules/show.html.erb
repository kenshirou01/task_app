<div class = main_container>
  <div class = information>
    <h2>スケジュール詳細</h2>
  </div>

  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @schedule.title %></td>
    </tr>

    <tr>
      <th>開始日</th>
      <td><%= @schedule.start_date %></td>
    </tr>

    <tr>
      <th>終了日</th>
      <td><%= @schedule.end_date %></td>
    </tr>

    <tr>
      <th>投稿日時</th>
      <td><%= @schedule.created_at.to_s(:datetime_jp) %></td>
    </tr>

    <tr>
      <th>終日</th>
      <td>
      <% if @schedule.all %>
        <strong>○</strong>
      <% end %>
      </td>
    </tr>

    <tr>
      <th>スケジュールメモ</th>
      <td><%= @schedule.note %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li>
        <%= link_to "スケジュール一覧に戻る", :schedules %>
      </li>
      <li>
        <%= link_to "スケジュールを編集する", :edit_schedule %>
      </li>
      <li>
        <%= link_to "スケジュールを削除する", @schedule, method: :delete, data: {confirm: "本当に削除しますか？"} %>
      </li>
    </ul>
  </div>
</div>